{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "banners": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date-time"
          },
          "endDate": {
            "type": "string",
            "format": "date-time"
          },
          "header": {
            "type": "string"
          },
          "subheader": {
            "type": "string"
          },
          "externalUrl": {
            "type": "string"
          },
          "iconImageUrl": {
            "type": "string",
            "format": "uri"
          },
          "iconImageAlt": {
            "type": "string"
          },
          "gradient": {
            "type": "string"
          },
          "fontColor": {
            "type": "string"
          },
          "arrowColor": {
            "type": "string"
          },
          "featured": {
            "type": "boolean"
          }
        },
        "required": [
          "name",
          "startDate",
          "endDate",
          "header",
          "subheader",
          "externalUrl",
          "iconImageUrl",
          "iconImageAlt",
          "gradient",
          "fontColor",
          "arrowColor",
          "featured"
        ]
      }
    }
  },
  "required": ["banners"]
}
