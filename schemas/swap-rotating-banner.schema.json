{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "banners": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "start_date": {
            "type": "string",
            "format": "date-time"
          },
          "end_date": {
            "type": "string",
            "format": "date-time"
          },
          "header": {
            "type": "string"
          },
          "subheader": {
            "type": "string"
          },
          "external_url": {
            "type": "string"
          },
          "icon_image_url": {
            "type": "string",
            "format": "uri"
          },
          "icon_image_alt": {
            "type": "string"
          },
          "gradient": {
            "type": "string"
          },
          "font_color": {
            "type": "string"
          },
          "arrow_color": {
            "type": "string"
          },
          "featured": {
            "type": "boolean"
          }
        },
        "required": [
          "name",
          "start_date",
          "end_date",
          "header",
          "subheader",
          "external_url",
          "icon_image_url",
          "icon_image_alt",
          "gradient",
          "font_color",
          "arrow_color",
          "featured"
        ]
      }
    }
  },
  "required": ["banners"]
}
